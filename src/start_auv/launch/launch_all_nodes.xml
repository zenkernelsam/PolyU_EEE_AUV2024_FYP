<launch>
    <!-- Launch task1_node with arguments -->
    <node pkg="task1_node" type="task1_node.py" name="task1_node" output="screen">
        <param name="args" value="True forward" />
        <env name="PYTHONUNBUFFERED" value="1" />
        <prefix command="sudo -E" />
    </node>

    <!-- Launch task2_node with arguments -->
    <node pkg="task2_node" type="task2_node.py" name="task2_node" output="screen">
        <param name="args" value="False forward still" />
        <env name="PYTHONUNBUFFERED" value="1" />
        <prefix command="sudo -E" />
    </node>

    <!-- Launch master_node -->
    <node pkg="master_node" type="master_node.py" name="master_node" output="screen">
        <env name="PYTHONUNBUFFERED" value="1" />
        <prefix command="sudo -E" />
    </node>

    <!-- Launch control_node -->
    <node pkg="control_node" type="control_node.py" name="control_node" output="screen">
        <env name="PYTHONUNBUFFERED" value="1" />
        <prefix command="sudo -E" />
    </node>
</launch>
